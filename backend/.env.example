# ===============================
# Database Configuration
# ===============================

MYSQL_ROOT_PASSWORD=password     # Root password for MySQL
MYSQL_DATABASE=db            # Name of the database
MYSQL_HOST=mysql             # Database host (localhost for local development)
MYSQL_PORT=3306                  # MySQL port

# Full database connection URL (uses the variables above)
DATABASE_URL="mysql://root:${MYSQL_ROOT_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}?schema=public"

# ===============================
# Backend Configuration
# ===============================

BACKEND_PORT=8080                # Port for the backend server